@model List<Student>
@{
	ViewData["Title"] = "Index";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Student Details</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Student" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>&nbsp;Add Student</a>
		</div>
	</div>
</div>

<div class="col-4 p-0 justify-content-end">
	<form asp-controller="Student" asp-action="Index">
		<span class="btn-group">
			<input class="control" type="text" name="SearchText" style="width:350px" placeholder="Enter Name or Department To Search"/> &nbsp;
			<button class="btn btn-info" type="submit">Search</button>
			@*<input class="p-1 ml-2 btn btn-sm btn-info" type="submit" value="Search"/>*@
		</span>
	</form>
</div>
<br />

<table class="table table-bordered border-dark table-striped" style="width:100%">
	<thead>
		<tr>
			<th>
				Student Name
			</th>
			<th>
				Department
			</th>
			<th>
				Passed Out Year
			</th>
			<th>
				Edit
			</th>
			<th>
				Delete
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td style="width:30%">
					@obj.Student_Name
				</td>
				<td style="width:30%">
					@obj.Student_Department
				</td>
				<td style="width:20%">
					@obj.Year
				</td>
				<td>
					<div class="w-65 btn-group" role="group">
						<a asp-controller="Student" asp-action="Edit" asp-route-student_id="@obj.Student_Id" class="btn btn-warning mx-2">
							<i class="bi bi-pencil-square"></i>&nbsp;Edit
						</a>
					</div>
				</td>
				<td>
					<div class="w-65 btn-group" role="group">
						<a asp-controller="Student" asp-action="Delete" asp-route-id="@obj.Student_Id" class="btn btn-danger mx-2">
							<i class="bi bi-pencil-square"></i>&nbsp;Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

